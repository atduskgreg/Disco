    <script>
    function ready(){
        $(".emailToggle").click(function(e){
            element = $(e.target);
            console.log(element.css("overflow"));
            if(element.parent().css("overflow") == "visible" ){
                element.parent().css("overflow", "hidden");
            } else {
               element.css("overflow", "visible");
            }

         $($(".emailToggle")[0]).parent().css("overflow", "visible")
         $($(".emailToggle")[0]).parent().children(".emailToggle").toggle()
         if($($(".emailToggle")[0]).parent().parent().css("height") == "auto"){
            $($(".emailToggle")[0]).parent().parent().css("height", "20px");
         } else {
             $($(".emailToggle")[0]).parent().parent().css("height", "auto");
         }
            return false;
        });
    }

    document.addEventListener("DOMContentLoaded", ready, false);

    </script>
